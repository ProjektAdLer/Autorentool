@using H5pPlayer.Presentation.PresentationLogic.ValidateH5p

<button @onclick="ValidateLater"
        class="uppercase btn-standard shadow-lg text-adlergrey rounded-lg bg-adlerdeactivated hover:bg-adlerdarkblue hover:text-buttonbgblue">
    Später durchführen
</button>

@code {

    [Parameter, EditorRequired]
    public required IValidateH5pController ValidateH5pController { get; set; }

    private void ValidateLater()
    {
        ValidateH5pController.TerminateValidateH5p();
    }
}
