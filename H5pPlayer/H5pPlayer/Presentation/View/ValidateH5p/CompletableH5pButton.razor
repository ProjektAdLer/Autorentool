@using H5pPlayer.Presentation.PresentationLogic.ValidateH5p

<button @onclick="MarkAsCompletable"
        class="btn-standard p-3 min-w-[150px] text-right font-bold text-lg shadow-lg"
        disabled="@(!IsEnabled)">
    Überprüfung erfolgreich
</button>

@code {
    [Parameter]
    public bool IsEnabled { get; set; }

    [Parameter, EditorRequired]
    public required IValidateH5pController ValidateH5pController { get; set; }

    private void MarkAsCompletable()
    {
        ValidateH5pController.SetActiveH5pStateToCompletable();
    }
}
