                    @for (var i = 0; i < LearningSpaceP.LearningSpaceVm.LearningSpaceLayout.Capacity; i++)
                    {
                        var x = i;
                        var identifier = LearningSpaceP.LearningSpaceVm.Id.ToString() + x;

                        <MudDropZone T="ILearningElementViewModel" Identifier="@identifier"
