@using Microsoft.Extensions.Localization
@using System.Diagnostics.CodeAnalysis
<MudDialog>
    <DialogContent>
        @Localizer["Dialog.Content.Line1.Text"]
        @Localizer["Dialog.Content.Line2.Text"]
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Outlined" OnClick="ReplaceElement">@Localizer["Dialog.Button.Replace.Text"]</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Outlined" OnClick="Cancel">@Localizer["Dialog.Button.Cancel.Text"]</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Inject, AllowNull] //can never be null, DI will throw exception on unresolved types - n.stich
    private IStringLocalizer<ReplaceLearningElementDialog> Localizer { get; set; }

    void ReplaceElement()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel()
    {
        MudDialog.Close(DialogResult.Cancel());
    }

}