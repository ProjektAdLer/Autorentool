@using Presentation.View.Layout
@using Presentation.View.World
@using Presentation.Components.Forms
@using Presentation.PresentationLogic.DropZone
@using Presentation.PresentationLogic.Element
@using Presentation.View.Space
@page "/app"
<div class="flex flex-col h-screen w-screen bg-adlerblue-100 font-sans">
    <HeaderBar/>
    <MudDropContainer T="IElementViewModel"
                      Items="ElementDropZoneHelper.GetWorldAndSpaceElements()"
                      ItemsSelector="ElementDropZoneHelper.IsItemInDropZone"
                      ItemDropped="ElementDropZoneHelper.ItemUpdated"
                      class="columns-3 flex-1 flex flex-row justify-between items-center">
        <ChildContent>
            <SideContainer Side="Side.Left">
                <Sidebar SidebarSide="Side.Left">
                    <SidebarItem>
                        <SidebarContent>
                            <p class="text-center">Ico</p>
                        </SidebarContent>
                        <MainContent>
                            <p class="text-center">Some elaborate content</p>
                            <AuthoringToolWorkspaceView></AuthoringToolWorkspaceView>
                        </MainContent>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarContent>
                            <p>Ico2</p>
                        </SidebarContent>
                        <MainContent>
                            <MudDropZone T="IElementViewModel">
                                <h2>DropZone1</h2>
                            </MudDropZone>
                        </MainContent>
                    </SidebarItem>
                </Sidebar>
            </SideContainer>
            <CenterContainer>
                <div class="bg-blue-400">
                    Center
                    <SpaceView></SpaceView>
                </div>
            </CenterContainer>
            <SideContainer Side="Side.Right">
                <Sidebar SidebarSide="Side.Right">
                    <SidebarItem>
                        <SidebarContent>
                            <div title="LerarningPathWays">
                                <img class="w-8" src="CustomIcons/world-icon-nobg.png" alt="blabla">
                            </div>
                        </SidebarContent>
                        <MainContent>
                            <WorldView></WorldView>
                        </MainContent>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarContent>
                            <div title="WorldOverView">
                                <img class="w-8" src="CustomIcons/hierarchy-nobg.png" alt="blabla">
                            </div>
                        </SidebarContent>
                        <MainContent>
                            <WorldOverView></WorldOverView>
                        </MainContent>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarContent>
                            <MudIcon Icon="@Icons.Material.Filled.PlusOne"></MudIcon>
                        </SidebarContent>
                        <MainContent>
                            <CreateWorldForm/>
                        </MainContent>
                    </SidebarItem>
                <SidebarItem>
                    <SidebarContent>
                        <MudIcon Icon="@Icons.Material.Filled.PlusOne"></MudIcon>
                    </SidebarContent>
                    <MainContent>
                        <CreateSpaceForm/>
                    </MainContent>
                </SidebarItem>
            </Sidebar>
            </SideContainer>
        </ChildContent>
        <ItemRenderer>
            <MudListItem Text="@context.Name"></MudListItem>

        </ItemRenderer>
    </MudDropContainer>
</div>

@code {

    [Inject]
    public IElementDropZoneHelper ElementDropZoneHelper { get; set; }

}