<div class="h-[95%] flex">
    <div class="py-3 @SidebarOrder()">
        <aside class="min-w-[50px] gap-2 flex flex-col rounded-lg">
            <CascadingValue Value="this">
                @ChildContent
            </CascadingValue>
        </aside>
    </div>
    @if (CurrentItem is not null)
    {
        <div class="flex flex-row w-fit bg-adlergrey-300 @ContentOrder() rounded-lg p-2">
            @CurrentItem.MainContent
        </div>
    }
</div>
@code {
    [Parameter]
#pragma warning disable CS8618 - injected by framework n.stich
    public RenderFragment ChildContent { get; set; }
    [Parameter, EditorRequired]
    public Side SidebarSide { get; set; }
#pragma warning restore CS8618

    internal SidebarItem? CurrentItem { get; private set; }

    public void SetSidebarItem(SidebarItem item)
    {
        CurrentItem = CurrentItem != item ? item : null;
        InvokeAsync(StateHasChanged);
    }

    private string SidebarOrder() => SidebarSide switch
    {
        Side.Left => "order-1",
        Side.Right => "order-2",
        _ => throw new ArgumentOutOfRangeException()
    };

    private string ContentOrder() => SidebarSide switch
    {
        Side.Left => "order-2",
        Side.Right => "order-1",
        _ => throw new ArgumentOutOfRangeException()
    };
    
}