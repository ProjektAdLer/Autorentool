@using System.Diagnostics.CodeAnalysis
@using Microsoft.Extensions.Localization

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@Localizer["Dialog.Heading"]</MudText>

        <MudText Class="mt-2 mb-2" Typo="Typo.body2">
            @Localizer["Dialog.Description"]
        </MudText>

        <MudText Class="mb-2" Typo="Typo.body2">
            @Localizer["Dialog.Instruction"]
        </MudText>

    </DialogContent>

    <DialogActions>
        <MudButton OnClick="CancelDialog" Color="Color.Secondary">@Localizer["Dialog.CancelButton"]</MudButton>
        <MudButton OnClick="CloseDialog" Color="Color.Primary">
            @Localizer["Dialog.BeginValidationButton"]
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
   
    [Inject, AllowNull] 
    private IStringLocalizer<ImportH5PDialog> Localizer { get; set; } = default!;   
    
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; } = default!;
    
   
    [Parameter] public EventCallback<string> OnValidateClicked { get; set; }

    private  void CloseDialog()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void CancelDialog() => MudDialog.Cancel();
}
