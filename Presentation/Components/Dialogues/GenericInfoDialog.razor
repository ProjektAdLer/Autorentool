@using System.Diagnostics.CodeAnalysis
<MudDialog>
    <DialogContent>
        <MudText>@DialogText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="OkButtonColor" OnClick="Ok">@OkButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    public IMudDialogInstance? MudDialog { get; set; }

    // ReSharper disable once RedundantNullableFlowAttribute
    [Parameter, EditorRequired, AllowNull] //allow null since not providing the parameter produces a warning - n.stich
    public MarkupString DialogText { get; set; }

    [Parameter]
    public string OkButtonText { get; set; } = "Ok";

    [Parameter]
    public Color OkButtonColor { get; set; } = Color.Default;

    private void Ok() => MudDialog?.Close();
}