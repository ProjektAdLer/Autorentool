@using Microsoft.Extensions.Localization
@using System.Diagnostics.CodeAnalysis
@using Presentation.Components.Dialogues
<MudIconButton id="LmsLoginButton.OpenLmsDialog.Button" OnClick="OpenLmsDialog" Icon="@Icons.Material.Filled.Person"
               title=@Localizer["LMS.Login.Hover"]
               Class="text-adlerdarkblue normal-case p-1"
               Size="Size.Medium">
</MudIconButton>

@code {

    [Inject, AllowNull] //can never be null, DI will throw exception on unresolved types - n.stich
    internal IDialogService DialogService { get; set; }

    [Inject, AllowNull] //can never be null, DI will throw exception on unresolved types - n.stich
    internal IStringLocalizer<LmsLoginButton> Localizer { get; set; }

    private void OpenLmsDialog()
    {
        var options = new DialogOptions
        {
            BackdropClick = false,
        };
        DialogService.ShowAsync<LmsLoginDialog>("Login", options);
        InvokeAsync(StateHasChanged);
    }

}