@using Microsoft.Extensions.Localization
@using Presentation.Components.Culture
@using Presentation.PresentationLogic
@using System.Diagnostics.CodeAnalysis
@inherits ComponentBase
@inject IShutdownManager ShutdownManager
<MudIconButton title=@Localizer["CloseAppButton.Hover"].Value
               Class="w-12 h-12 text-adlerdarkblue rounded-none transform ease-in-out duration-75 active:drop-shadow-none hover:text-buttonbgblue m-0 p-2 hover:bg-red-400"
               Icon="@Icons.Material.Filled.Close"
               OnClick="async () => await ShutdownManager.RequestShutdownAsync()">
    
</MudIconButton>

@code
{
    
    [Inject, AllowNull] //can never be null, DI will throw exception on unresolved types - n.stich
    public IStringLocalizer<CloseAppButton> Localizer { get; set; }
}