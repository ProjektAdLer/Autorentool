                        <p class="text-xs cursor-default">@Localizer["CreateWorldForm.General.InfoText"]</p>
                        <MudTextField @bind-Value="FormDataContainer.FormModel.Name"
                                      For="@(() => FormModel.Name)"
                                      @ref="_nameField"
