                                  Label="@Localizer["CreateWorldForm.Fields.Collapsable.Story.Field.Start.Label"]"
                                  Variant="Variant.Outlined"
                                  Placeholder="@Localizer["CreateWorldForm.Fields.Collapsable.Story.Field.Start.Placeholder"]"
