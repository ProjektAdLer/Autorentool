@using Microsoft.Extensions.Localization
<MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Check" IconColor="Color.Success" Class="btn-standard rounded" OnClick="@(async () => await SubmitThenRemapAsync())">@Localizer["RemapSubmitButton.Text"]</MudButton>

@code {
    [CascadingParameter]
    public IBaseForm Form { get; set; }
    
    [Inject]
    private StringLocalizer<SubmitThenRemapButton> Localizer { get; set; }
    
    [Parameter, EditorRequired]
    public EventCallback RemapAction { get; set; }

    private async Task SubmitThenRemapAsync()
    {
        await Form.SubmitAsync();
        await RemapAction.InvokeAsync();
    }
}