    <MudButton Class="@ButtonStyle" 
               OnClick="@Submit">
        <MudIcon Icon="@Icons.Material.Filled.Check" Color="Color.Success"></MudIcon>
        <MudText Class="px-2 uppercase font-bold">Ok</MudText>
    </MudButton>

@code {
    [Parameter]
    public string ButtonStyle { get; set; } = "btn-standard rounded-lg p-2 shadow-lg";
    
    [CascadingParameter]
    public IBaseForm? Form { get; set; }

    private void Submit() => Form?.SubmitAsync();
}
