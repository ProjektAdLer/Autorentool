{
  "executable": "AuthoringTool",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "AuthoringTool",
  "author": "Team AdLer",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "win": {
      "icon": "../../../wwwroot/favicon.ico"
    },
    "linux": {
      "icon": "../../../wwwroot/favicon.png"
    },
    "mac": {
      "icon": "../../../wwwroot/favicon_highres.ico"
    },
    "appId": "com.AuthoringTool.app",
    "productName": "AuthoringTool",
    "copyright": "Copyright Â© 2023 Team AdLer",
    "buildVersion": "2.2.2",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop_Publish"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
