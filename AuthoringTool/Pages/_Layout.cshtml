@namespace AuthoringTool.Pages
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IStringLocalizer<LayoutModel> Localizer



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <base href="~/"/>
    @* ReSharper disable once Html.PathError - n.stich *@
    <link href="css/site.css" rel="stylesheet"/>
    <link href="css/Presentation.global.css" rel="stylesheet"/>
    <link href="AuthoringTool.styles.css" rel="stylesheet"/>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet"/>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet"/>
    <link href="css/output.css" rel="stylesheet"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered"/>
    <title>@Localizer["Header.Title"]</title>
</head>
<body>
@RenderBody()

<div id="blazor-error-ui">
    <environment include="Staging,Production">
        @Localizer["Environment.Exception.Staging"]
    </environment>
    <environment include="Development">
        @Localizer["Environment.Exception.Development"]
    </environment>
    <a href="" class="reload">@Localizer["Functionality.Reload.Text"]</a>
    <a class="dismiss">🗙</a>
</div>

@* ReSharper disable Html.PathError - n.stich*@
<script src="_framework/blazor.server.js"></script>
<script src="_content/MudBlazor/MudBlazor.min.js"></script>
@* ReSharper restore Html.PathError *@
</body>
</html>
